<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.dublabs.Domain.AcademicRecordsEntity</class>
        <class>com.dublabs.Domain.CoursesEntity</class>
        <class>com.dublabs.Domain.InstructorsEntity</class>
        <class>com.dublabs.Domain.ListingsEntity</class>
        <class>com.dublabs.Domain.PrereqsEntity</class>
        <class>com.dublabs.Domain.ProgramsEntity</class>
        <class>com.dublabs.Domain.RequestsEntity</class>
        <class>com.dublabs.Domain.StudentsEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/csassignment"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
